@{
}

<h1>Jupiler Pro League</h1>
<h3>Season 2022/2023</h3>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model[0].League_Position)</th>
        <th>@Html.DisplayNameFor(model => model[0].Name)</th>
        <th>@Html.DisplayNameFor(model => model[0].Points)</th>
        <th>@Html.DisplayNameFor(model => model[0].Goal_Diff)</th>
        <th>@Html.DisplayNameFor(model => model[0].Matches_Played)</th>
        <th>@Html.DisplayNameFor(model => model[0].Wins)</th>
        <th>@Html.DisplayNameFor(model => model[0].Draws)</th>
        <th>@Html.DisplayNameFor(model => model[0].Losts)</th>
        <th>Actions</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.League_Position</td>
            <td>@x.Name</td>
            <td>@x.Points</td>
            <td>@x.Goal_Diff</td>
            <td>@x.Matches_Played</td>
            <td>@x.Wins</td>
            <td>@x.Draws</td>
            <td>@x.Losts</td>
            <td>
                @if (x.IsFavourite)
                {
                    <a class="btn btn-primary"
                       asp-action="RemoveFavorite"
                       asp-controller="Leagues"
                       asp-route-id="@x.Id">Remove from favourite</a>
                }
                else
                {
                    <a class="btn btn-primary"
                       asp-action="AddFavourite"
                       asp-controller="Leagues"
                       asp-route-id="@x.Id">Add to favourite</a>
                }
                <a class="btn btn-primary"
                   asp-action="Games"
                   asp-controller="Leagues"
                   asp-route-id=@x.Id>Schedule</a>
            </td>
        </tr>
    }

</table>